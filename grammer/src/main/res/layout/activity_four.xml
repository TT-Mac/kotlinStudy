<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_fun1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="空参，空输入函数"></Button>

        <Button
            android:id="@+id/btn_fun2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="有输入函数"></Button>

        <Button
            android:id="@+id/btn_fun3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="输入函数可为空的情况"></Button>


        <Button
            android:id="@+id/btn_fun4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="带返回值的函数"></Button>

        <Button
            android:id="@+id/btn_fun5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="输入参数的变化"></Button>

        <Button
            android:id="@+id/btn_fun6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="带默认参数的函数"></Button>

        <Button
            android:id="@+id/btn_fun7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改带默认参数的函数"></Button>

        <Button
            android:id="@+id/btn_fun8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="指定某个参数的输入值"></Button>

        <Button
            android:id="@+id/btn_fun9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="可变参数的函数"></Button>

        <Button
            android:id="@+id/btn_fun10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="可变参数为数组的函数"></Button>

        <Button
            android:id="@+id/btn_fun11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="泛型函数"></Button>

        <Button
            android:id="@+id/btn_fun12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="内联函数"></Button>
        <Button
            android:id="@+id/btn_fun13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="简化函数"></Button>
        <Button
            android:id="@+id/btn_fun14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="尾递归函数"></Button>
        <Button
            android:id="@+id/btn_fun15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="高阶函数"></Button>
        <Button
            android:id="@+id/btn_fun16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="扩展函数"></Button>
        <Button
            android:id="@+id/btn_fun17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="扩展高阶函数"></Button>
        <Button
            android:id="@+id/btn_fun18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="扩展日期函数"></Button>
        <Button
            android:id="@+id/btn_fun19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="单利对象"></Button>
    </LinearLayout>

</ScrollView>